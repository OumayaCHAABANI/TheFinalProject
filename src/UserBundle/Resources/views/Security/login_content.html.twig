
{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

{% block body %}	
	<nav id="menu" class="fake_menu"></nav>
	
	<div id="login">
		<aside>
			<figure>
				<a href="index.html"><img src="img/logo_sticky.svg" width="165" height="35" alt="" class="logo_sticky"></a>
			</figure>
			
			<form action="{{ path("fos_user_security_check") }}" method="post">

					{% if csrf_token %}
							<input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
					{% endif %}


					<div class="access_social">
						<a href="#0" class="social_bt facebook">Login with Facebook</a>
						<a href="#0" class="social_bt google">Login with Google</a>
					</div>

				<div class="divider"><span>Or</span></div>
				
				<div class="form-group">
					<label for="username">{{ 'security.login.username'|trans }}</label>
    			<input type="text" id="username" name="_username" value="{{ last_username }}" required="required" autocomplete="username" />
			<i class="icon_mail_alt"></i>
				</div>

				<div class="form-group">
					 <label for="password">{{ 'security.login.password'|trans }}</label>
    				<input type="password" id="password" name="_password" required="required" autocomplete="current-password" />
				
				</div>
				
				<div class="clearfix add_bottom_30">
					<div class="checkboxes float-left">
						<input type="checkbox" id="remember_me" name="_remember_me" value="on" />
    				<label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
					</div>

					<div class="float-right mt-1"><a id="forgot" href="javascript:void(0);">Forgot Password?</a></div>
				</div>
				<input type="submit"  name="_submit" value="{{ 'security.login.submit'|trans }}" class="btn_1 rounded full-width">
				
				<div class="text-center add_top_10">New to Sparker? <strong><a href="{{ path('fos_user_registration_register')}}">Sign up!</a></strong></div>
			</form>
			<div class="copy">Â© 2018 Sparker</div>
		</aside>
	</div>
    
{% endblock %}



{% block stylesheets %}
    {% stylesheets 'bundles/user/css/style.css' 
				   'bundles/user/css/bootstrap.min.css'
	               'bundles/user/css/vendors.css'
	filter='cssrewrite' %}
        <link rel="stylesheet" href="{{ asset_url }}" />
		<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700" />
    {% endstylesheets %}
{% endblock %}

<script src="{{ asset('UserBundle/Resources/public/js/common_scripts.js') }}"></script>
<script src="{{ asset('UserBundle/Resources/public/js/functions.js') }}"></script>
<script src="{{ asset('UserBundle/Resources/public/js/validate.js') }}"></script>

